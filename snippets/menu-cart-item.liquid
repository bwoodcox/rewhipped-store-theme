<li class="cart__item">
  <div class="cart__item__image pull-left"><img src="{{ item.image | product_img_url: 'small' }}" alt=""/></div>
  <div class="cart__item__control">
    <!-- <div class="cart__item__delete"><a href="/cart/change?line={{ forloop.index }}&quantity=0" class="icon icon-delete"><span>{{ 'cart.header.button_delete' | t }}</span></a></div> -->
    <div class="cart__item__delete"><a href="javascript:void(0);" onclick="Shopify.removeItemByLine({{ forloop.index }});" class="icon icon-delete"><span>{{ 'cart.header.button_delete' | t }}</span></a></div>
    <!--<div class="cart__item__edit"><a href="{{item.url}}" class="icon icon-edit"><span>{{ 'cart.header.button_edit' | t }}</span></a></div>-->
  </div>
  <div class="cart__item__info">
    <div class="cart__item__info__title">
      <h2 class="title-center">
        {{ item.title }}
        <span class="Bold-theme-hook-DO-NOT-DELETE bold_cart_item_properties" style="display:none !important;"></span>
        <div class="cart__meta-text">
          {% assign propertySize = item.properties | size %}
          {% if propertySize > 0 %}
            {% for p in item.properties %}
              {% assign first_character_in_key = p.first | truncate: 1, '' %}
              {% unless p.last == blank or first_character_in_key == '_' %}
                {{ p.first }}:&nbsp;
                {% if p.last contains '/uploads/' %}
                  <a href="{{ p.last }}">{{ p.last | split: '/' | last }}</a>
                {% else %}
                  {{ p.last }}
                {% endif %}
                <br />
              {% endunless %}
            {% endfor %}
          {% endif %}
        </div>
      </h2>
    </div>
    <div class="cart__item__info__price"><span class="info-label">{{ 'cart.header.price' | t }}</span><span class="Bold-theme-hook-DO-NOT-DELETE bold_cart_item_price" style="display:none !important;"></span><span>{{item.price | money}}</span></div>
    <div class="cart__item__info__price" style="right: 35%;"><span class="info-label">{{ 'cart.header.quantity' | t }}</span><span>{{ item.quantity }}</span></div>
  </div>
</li>
